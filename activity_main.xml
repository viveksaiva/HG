<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAstroDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Astro Details"
        android:padding="16dp"
        android:background="@color/abc_search_url_text_normal"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txtAstroDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Response will be here soon.."
        android:textColor="@color/link_text_material_light"
        android:textColorHint="@color/button_material_dark"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnAstroDetails"
        android:padding="24dp"
        android:gravity="center"
        />



</RelativeLayout>
